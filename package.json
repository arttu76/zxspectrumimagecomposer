{
  "name": "scr",
  "private": true,
  "version": "0.0.32",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "test": "jest",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "redeploy": "npm run test && npm version patch && npm run build && git push && git push --tags && docker build -t zximage:latest -f deployment/Dockerfile . && deployment/pushToDigitalOcean.sh && deployment/k8s-redeploy.sh && deployment/images.sh"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "material-symbols": "^0.14.1",
    "ramda": "^0.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-tooltip": "^5.24.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/ramda": "^0.29.9",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
